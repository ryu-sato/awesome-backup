{
  "lib": "es2019",

  /* default compiler options */
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "noResolve": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmit": false,
    "inlineSources": true,
    "target": "es2019",
    "module": "commonjs",

    /* Module Resolution Options */
    "esModuleInterop": true,

    /*
     * basic aliases
     *
     * This is an assumption inherited by "tsconfig.json", which is placed in the top directory of each package.
     */
    "paths": {
      "@awesome-backup/commands": ["../../packages/commands/src"],
      "@awesome-backup/commands/*": ["../../packages/commands/src/*"],
      "@awesome-backup/storage-service-clients": ["../../packages/storage-service-clients/src"],
      "@awesome-backup/storage-service-clients/*": ["../../packages/storage-service-clients/src/*"],
      "@awesome-backup/tar": ["../../packages/tar/src"],
      "@awesome-backup/tar/*": ["../../packages/tar/src/*"],
    }
  }
}
